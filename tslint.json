{
	"extends": "tslint:recommended",
	"rules": {
		/*
		 Rules disabled because they are either style rules or we don't want them
		 */
		"arrow-parens": false,
		"ban": false,
		"curly": false,
		"eofline": false,
		"indent": false,
		"interface-name": false,
		"jsdoc-format": true,
		"jsx-curly-spacing": false,
		"jsx-no-lambda": false,
		"jsx-no-multiline-js": false,
		"jsx-wrap-multiline": false,
		"label-position": true,
		"max-line-length": false,
		"no-bitwise": false,
		"no-consecutive-blank-lines": false,
		"no-reference": false,
		"no-string-literal": false,
		"object-literal-sort-keys": false,
		"quotemark": false,
		"semicolon": false,
		"trailing-comma": false,
		"whitespace": false,
		/*
		 * TODO: Enable these disabled rules. They showed up when we upgrade tslint, but we
		 * punted on resolving issues associated with them
		 */
		"no-unused-expression": false,
		"max-classes-per-file": false,
		"object-literal-shorthand": false,
		"ordered-imports": false,
		"no-angle-bracket-type-assertion": false,
		"only-arrow-functions": false,
		"array-type": false,
		"prefer-for-of": false,
		"callable-types": false,
		"ban-types": false,
		/*
         * Broken rules - re-enable when tslint updates
         */
		"class-name": false,
		/*
         * Enabled Rule Config
         */
		"member-ordering": [
			true,
			"public-before-private",
			"static-before-instance",
			"variables-before-functions"
		]
	}
}
