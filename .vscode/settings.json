{
    "typescript.check.workspaceVersion": false,
    "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.DS_Store": true,
    "**/*~": true,
    "**/*.js": {
        "when": "$(basename).ts"
    },
    "**/**/*.js": {
        "when": "$(basename).tsx"
    },
    "**/*.d.ts": {
        "when": "$(basename).ts"
    },
    "**/**/*.d.ts": {
        "when": "$(basename).tsx"
    }  
}
